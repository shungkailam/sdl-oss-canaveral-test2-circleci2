{
  "name": "cloudmgmt-api",
  "version": "0.0.1",
  "description": "IoT Management server API layer",
  "scripts": {
    "start": "npm run build && node ./dist/server.js",
    "build": "npm run clean && npm run prettier && npm run lint && tsc && npm run copy-swagger-ui && npm run copy-sql-files && npm run copy-lib-files",
    "lint": "tslint ./src/**/*.ts",
    "clean": "rimraf dist",
    "test": "mocha -r ts-node/register ./src/**/*.spec.ts",
    "copy-swagger-ui": "ncp ./src/swagger-ui ./dist/swagger-ui",
    "copy-sql-files": "ncp ./src/rest/db-scripts/sql-script.sql ./dist/rest/db-scripts/sql-script.sql",
    "copy-lib-files": "ncp ./lib ./dist/lib",
    "prettier": "prettier --parser typescript --single-quote --print-width 80 --trailing-comma es5 --write \"src/**/*.ts\""
  },
  "private": true,
  "dependencies": {
    "@types/socket.io": "^1.4.30",
    "@types/socket.io-client": "^1.4.30",
    "aws-sdk": "^2.449.0",
    "axios": "^0.16.2",
    "body-parser": "^1.15.2",
    "compression": "^1.7.1",
    "crypto2": "^1.0.2",
    "elasticsearch": "^13.3.1",
    "express": "^4.14.0",
    "express-https-redirect": "^1.0.0",
    "fast-deep-equal": "^2.0.1",
    "jsonwebtoken": "^8.2.0",
    "kafka-node": "^2.2.3",
    "md5": "^2.2.1",
    "method-override": "^2.3.6",
    "mysql2": "^1.5.2",
    "node-forge": "^0.7.4",
    "node-rsa": "^0.4.2",
    "object.omit": "^3.0.0",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "pino": "^4.13.0",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^5.15.1",
    "sequelize-typescript": "^1.0.0",
    "sha256": "^0.2.0",
    "sjcl": "^1.0.7",
    "sjcl-typescript-definitions": "^1.0.1-1",
    "socket.io": "^2.0.3",
    "ts-protoc-gen": "^0.4.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.30",
    "@types/chai": "^4.1.2",
    "@types/elasticsearch": "^5.0.16",
    "@types/express": "^4.0.30",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/method-override": "0.0.27",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "@types/pino": "^4.7.1",
    "@types/sequelize": "^4.27.10",
    "chai": "^4.1.2",
    "mocha": "^5.0.4",
    "ncp": "^2.0.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.5.2",
    "ts-node": "^5.0.1",
    "tslint": "^3.11.0",
    "typescript": "~3.3.3"
  }
}
