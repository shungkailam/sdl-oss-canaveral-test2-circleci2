{
  "swagger": {
    "outputDirectory": "./dist",
    "entryFile": "./src/server.ts",
    "host": "localhost:3000",
    "basePath": "/v1",
    "securityDefinitions": {
      "BearerToken": {
        "description": "Bearer Token authentication",
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "security": [
      {
        "BearerToken": []
      }
    ]
  },
  "routes": {
    "basePath": "/v1",
    "entryFile": "./src/server.ts",
    "routesDir": "./src",
    "authenticationModule": "./src/authentication.ts"
  }
}
